<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.HeatMapLoadActivity"
    tools:showIn="@layout/activity_heat_map_load">

    <TextView
        android:id="@+id/text_load_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a heat map to view"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="@color/colorGrey"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        />

    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_load_select"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <ListView
            android:id="@+id/load_list_view"
            android:layout_width="wrap_content"
            android:dividerHeight="24dp"
            android:divider="@color/colorPrimaryDark"
            android:layout_height="wrap_content">

        </ListView>

    </RelativeLayout>



</RelativeLayout>
